@using System.Runtime.InteropServices
@using CSM.Common.Resources
@using CSM.Common.Utilities
@using MvcPaging
@model CSM.Web.Models.CreateServiceRequestViewModel
@helper LabelForSort(string headerText, string fieldName, string sortField, string sortOrder)
{
    <a href="javascript:;" onclick="sortDocumentField('@fieldName');return false;">
        @headerText
        @if (!string.IsNullOrEmpty(fieldName) && !string.IsNullOrEmpty(sortField) && fieldName.ToLower().Equals(sortField.ToLower()))
        {
            if (sortOrder.Equals("ASC"))
            {<i class="fa fa-sort-asc"></i>}
            else
            {<i class="fa fa-sort-desc"></i> }
        }
        else
        {<i class="fa fa-sort"></i>}
    </a>
}
@if (Model.ActivityList == null || Model.ActivitySearchFilter.TotalRecords == 0)
{
    string sortField = Model.ActivitySearchFilter.SortField;
    string sortOrder = Model.ActivitySearchFilter.SortOrder;

    <div style="padding: 5px 0" class="form-inline">
        @using (Html.BeginForm("CreateActivity", "ServiceRequest", FormMethod.Post, new { @style = "display:inline-block" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="SrId" value="@Model.SrId" />
    <button type="submit" class="btn btn btn-green btn-sm"><i class="fa fa-plus"></i> New Activity</button>
        }
        <label class="margin-left-8"><input type="checkbox" checked="checked"> แสดงเฉพาะข้อมูล SR นี้</label>
    </div>

    <hr class="dashed-line" style="margin-bottom:0">

    <div class="table-responsive margin-top-10">
        <table class="table table-hover datatable">
            <thead>
                <tr>
                    <th style="font-size: 9px">Action</th>
                    <th style="font-size: 9px" title="เลขที่บัตรประชาชน/นิติบุุคคล/Passport/Employee No.">Subscription ID</th>
                    <th>เลขที่สัญญา</th>
                    <th>SR ID / Ticket ID</th>
                    <th>Product</th>
                    <th>Type</th>
                    <th>Area</th>
                    <th>Sub Area</th>
                    <th>SR Status</th>
                    <th>วันที่บันทึก</th>
                    <th>ผู้บันทึก</th>
                    <th>รายละเอียดการติดต่อ</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="12" class="center">@Resource.Msg_NoRecords</td>
                </tr>
            </tbody>
        </table>
    </div>
}
else
{
    string sortField = Model.ActivitySearchFilter.SortField;
    string sortOrder = Model.ActivitySearchFilter.SortOrder;

    <div style="padding: 5px 0" class="form-inline">
        @using (Html.BeginForm("CreateActivity", "ServiceRequest", FormMethod.Post, new { @style = "display:inline-block" }))
        {
            @Html.AntiForgeryToken()
            <input type="hidden" name="SrId" value="@Model.SrId" />
            <button type="submit" class="btn btn btn-green btn-sm"><i class="fa fa-plus"></i> New Activity</button>
        }
        <label class="margin-left-8"><input type="checkbox" id="chkOnlySr" checked="@Model.ActivitySearchFilter.SrOnly"> แสดงเฉพาะข้อมูล SR นี้</label>
        
        @if (ViewBag.OnlineStatus != "online")
        {
            <div class="pull-right" style="padding:5px">
                <span class="badge" style="background-color:#f0ad4e">ไม่สามารถอ่านข้อมูลจากระบบ CAR / ข้อมูลนี้เป็นข้อมูลจากฐานข้อมูล CSM</span>
            </div>
        }
    </div>

    <hr class="dashed-line" style="margin-bottom:0">

    <div class="form-inline nopadding">
        <div class="form-group">
            @Html.Raw(Html.Pager(
                new Options
                {
                    PageSize = Model.ActivitySearchFilter.PageSize,
                    TotalItemCount = Model.ActivitySearchFilter.TotalRecords,
                    CurrentPage = Model.ActivitySearchFilter.PageNo,
                    ItemTexts = new ItemTexts
                    {
                        First = "<i class='fa fa-step-backward' style='font-size: 0.8em'></i>",
                        Previous = "<i class='fa fa-caret-left'></i>",
                        Next = "<i class='fa fa-caret-right'></i>",
                        Last = "<i class='fa fa-step-forward' style='font-size: 0.8em'></i>"
                    },
                    IsShowFirstLast = true,
                    CssClass = "pager",
                    IsShowInputPage = true
                },
                new { PageSize = ViewBag.PageSize }))
        </div>
        <div class="form-group">
            @Html.DropDownList("PageSize", new SelectList(new Dictionary<string, int> { { "15", 15 }, { "30", 30 } }, "Key", "Value"), new { @class = "form-control input-xs", id = "pagesizelist" })
        </div>
        <div class="form-group text-nowrap margin-left-8">
            <strong>
                @MvcHtmlString.Create(string.Format(Resource.Lbl_Paging, @Model.ActivitySearchFilter.FirstPageIndex, @Model.ActivitySearchFilter.LastPageIndex, @Model.ActivitySearchFilter.TotalRecords))
            </strong>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="table-responsive margin-top-10">
        <table class="table table-hover datatable">
            <thead>
                <tr>
                    <th style="font-size: 9px">Action</th>
                    <th style="font-size: 9px" title="เลขที่บัตรประชาชน/นิติบุุคคล/Passport/Employee No.">Subscription ID</th>
                    <th>เลขที่สัญญา</th>
                    <th>SR ID / Ticket ID</th>
                    <th>Product</th>
                    <th>Type</th>
                    <th>Area</th>
                    <th>Sub Area</th>
                    <th>SR Status</th>
                    <th>วันที่บันทึก</th>
                    <th>ผู้บันทึก</th>
                    <th>รายละเอียดการติดต่อ</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int rowIndex = 1;
                }
                @foreach (var item in Model.ActivityList)
                {
                    string rowId = "act_" + (rowIndex++);
                    <tr>
                        <td class="center">
                            <span class="view" onclick="$jq('#@rowId').toggle('slow') "></span>
                        </td>
                        <td>@item.CustomerCardNo</td>
                        <td>@item.AccountNo</td>
                        <td>@item.SrNo</td>
                        <td>@item.ProductName</td>
                        <td>@item.TypeName</td>
                        <td>@item.AreaName</td>
                        <td>@item.SubAreaName</td>
                        <td>@item.StatusDesc</td>
                        <td>@DateUtil.ToStringAsDateTime(item.Date)</td>
                        <td>@item.OfficerUserFullName</td>
                        <td>@Html.Raw(StringHelpers.DisplayWithMaxLength(item.ActivityDesc)) <span onclick="$jq('#@rowId').toggle('slow')" style="cursor:pointer">...</span></td>
                    </tr>
                    <tr id="@rowId" style="display:none">
                        <td colspan="12">
                            <table class="activity_detail">
                                <tr>
                                    <td style="width:200px">Creator Branch :</td>
                                    <td style="width:200px">@item.CreatorBranchName</td>
                                    <td style="width:200px">Creator SR :</td>
                                    <td>@item.CreatorUserFullName</td>
                                </tr>
                                <tr>
                                    <td>Owner Branch :</td>
                                    <td>@item.OwnerBranchName</td>
                                    <td>Owner SR :</td>
                                    <td>@item.OwnerUserFullName</td>
                                </tr>
                                <tr>
                                    <td>Delegate Branch :</td>
                                    <td>@item.DelegateBranchName</td>
                                    <td>Delegate SR :</td>
                                    <td>@item.DelegateUserFullName</td>
                                </tr>
                                <tr>
                                    <td>Send E-Mail :</td>
                                    <td>@(item.IsSendEmail ? "Yes":"No")</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                @if (item.IsSendEmail)
                                {
                                    <tr>
                                        <td>To :</td>
                                        <td colspan="3">@item.EmailTo</td>
                                    </tr>
                                    <tr>
                                        <td>Cc :</td>
                                        <td colspan="3">@item.EmailCc</td>
                                    </tr>
                                    <tr>
                                        <td>Subject E-Mail :</td>
                                        <td colspan="3">@item.EmailSubject</td>
                                    </tr>
                                    <tr>
                                        <td>E-Mail Body :</td>
                                        <td colspan="3"><div style="width:700px;white-space:normal">@Html.Raw(item.EmailBody)</div></td>
                                    </tr>
                                    <tr>
                                        <td>Attachments :</td>
                                        <td colspan="3">@item.EmailAttachments</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <td>รายละเอียดการติดต่อ :</td>
                                        <td colspan="3">@Html.Raw(item.ActivityDesc)</td>
                                    </tr>
                                }
                                <tr>
                                    <td>Activity Type :</td>
                                    <td>@item.ActivityTypeName</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>SR Status :</td>
                                    <td>@item.SRStatusName</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<script type="text/javascript">
    $jq(function() {
        $jq("#chkOnlySr").change(onChkOnlySrChange);
    });

    function onChkOnlySrChange() {
        activitySearchFilter.SrOnly = $jq("#chkOnlySr")[0].checked;
        loadActivityData();
    }
</script>
