                </div>
            </div>
        </div>

        <div class="row"> @*1*@
            <div class="col-md-4">
                <div class="form-group">
                    <div class="col-md-5">
                        <p class="form-control-static text-primary">
                            ชื่อลูกค้า
                        </p>
                    </div>
                    <div class="col-md-7 nopadding">
                        @Html.TextBoxFor(model => model.SearchFilter.FirstName, new
                        {
                            @class = "form-control input-sm input-medium",
                            @id = "txtFirstName",
                            @maxlength = 50
