@using CSM.Entity
@using CSM.Common.Resources
@model CSM.Web.Models.TDAccountDetailViewModel
@{
    ViewBag.Title = Resource.Lbl_TDAccountDetail;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainMenu
{
    @Html.Action("MainMenu", "MenuNavigator", new { selectedMenu = MenuCode.Customer })
}

@section Breadcrumb {
    <strong class="font-blue">@Resource.Lbl_Customer &rsaquo;&rsaquo;</strong>
    <strong class="font-blue">
        @Html.ActionLink(Resource.Lbl_SearchCustomer, "Search", "Customer", new { @skip = "1" }, new { @class = "font-blue" })
    </strong>
    <strong class="font-green-jungle">&rsaquo;&rsaquo; @Resource.Lbl_TDAccountDetail </strong>
}

<div id="dvForm" class="form-box">
    <h5 class="form-title">@Resource.Lbl_TDAccountDetail</h5>
    @if (Model != null)
    {
        <div id="pnlCustomerInfo">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                CIF ID:
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.CIF_ID)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static" title="เลขที่บัตรประชาชน/นิติบุุคคล/Passport/Employee No.">
                                ประเภทลูกค้า :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.CustomerType)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                วันเกิด:
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.BirthDate)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                รหัสบัตรประชาชน / นิติบุคคล :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.IDNumber)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                สัญชาติ :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.CountryOfCitizenship)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                เบอร์โทรศัพท์ :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.AccountAddress.PhoneNo)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                ชื่อลูกค้า :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.CustomerFirstName)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                นามสกุลลูกค้า :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.CustomerLastName)
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                Email :
                            </p>
                        </div>
                        <div class="col-md-8">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.AccountAddress.EMail)
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group form-group-control">
                        <div class="col-md-1" style="width:11.11%">
                            <p class="form-control-static">
                                ที่อยู่ :
                            </p>
                        </div>
                        <div class="col-md-11" style="width:88.89%;padding-left:10px">
                            <p class="form-control input-sm static-view">
                                @Html.DisplayFor(model => model.AccountAddress.AddressDisplay)
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <div class="clearfix"></div>
        <div class="tab-content">
            <div id="dvSearchResult">
                @{ 
                    Html.RenderPartial("~/Views/ProductService/_TDAccountDetailList.cshtml", Model);
                 }
            </div>
        </div>
    }
</div>
<div class="clearfix"></div>

@section masterjs
{
    <script type="text/javascript">
        try {
            $jq("#tblCustomerList").tableHeadFixer({ "head": false, "left": 3 });
        }
        catch (e) { }
    </script>

    
}

