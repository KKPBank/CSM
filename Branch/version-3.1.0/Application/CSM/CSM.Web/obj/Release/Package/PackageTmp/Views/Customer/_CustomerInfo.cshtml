@model CSM.Web.Models.CustomerInfoViewModel
<div id="pnlCustomerInfo">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        CIF ID:
                    </p>
                </div>
                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.CustomerNumberDisplay)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        ประเภทลูกค้า:
                    </p>
                </div>
                <div class="col-md-8">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.CustomerTypeDisplay)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-5">
                    <p class="form-control-static">
                        วันเกิด:
                    </p>
                </div>
                <div class="col-md-7">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.BirthDateDisplay)
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        ID Type:
                    </p>
                </div>
                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.CbsCardType.CardTypeName)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static" title="เลขที่บัตรประชาชน/นิติบุุคคล/Passport/Employee No.">
                        ID Number:
                    </p>
                </div>
                <div class="col-md-8">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.CardNo)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-5">
                    <p class="form-control-static">
                        สัญชาติ:
                    </p>
                </div>
                <div class="col-md-7">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.CountryOfCitizenship)
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        คำนำหน้า:
                    </p>
                </div>
                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                    <p class="form-control input-text-wrap input-sm static-view">
                        @Html.DisplayFor(model => model.TitleThai.TitleName)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        ชื่อลูกค้า:
                    </p>
                </div>
                <div class="col-md-8">
                    <p class="form-control input-text-wrap input-sm static-view">@Html.DisplayFor(model => model.FirstNameThai)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-5">
                    <p class="form-control-static">
                        นามสกุลลูกค้า:
                    </p>
                </div>
                <div class="col-md-7">
                    <p class="form-control input-text-wrap input-sm static-view">
                        @Html.DisplayFor(model => model.LastNameThai)
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        Title:
                    </p>
                </div>
                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                    <p class="form-control input-text-wrap input-sm static-view">
                        @Html.DisplayFor(model => model.TitleEnglish.TitleName)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        First Name:
                    </p>
                </div>
                <div class="col-md-8" >
                    <p class="form-control input-text-wrap input-sm static-view">@Html.DisplayFor(model => model.FirstNameEnglish)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-5">
                    <p class="form-control-static">
                        Last Name:
                    </p>
                </div>
                <div class="col-md-7" >
                    <p class="form-control input-text-wrap input-sm static-view">
                        @Html.DisplayFor(model => model.LastNameEnglish)
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="form-group form-group-control">
                <div class="col-md-2">
                    <p class="form-control-static">
                        เบอร์โทรศัพท์ #1:
                    </p>
                </div>
                <div class="col-md-10 nopadding">
                    <div class="form-inline">
                        <div class="form-group" >
                            <p class="form-control input-sm static-view input-small">
                                @if (Model.PhoneList != null && Model.PhoneList.Count > 0)
                                {
                                    @Html.DisplayFor(model => model.PhoneList[0].PhoneTypeName)
                                }
                            </p>
                        </div>
                        <div class="form-group">
                            <p class="form-control input-sm static-view input-large">
                                @if (Model.PhoneList != null && Model.PhoneList.Count > 0)
                                {
                                    @Html.DisplayFor(model => model.PhoneList[0].PhoneNo)
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group form-group-control">
                <div class="col-md-2">
                    <p class="form-control-static">
                        เบอร์โทรศัพท์ #2:
                    </p>
                </div>
                <div class="col-md-10 nopadding">
                    <div class="form-inline">
                        <div class="form-group">
                            <p class="form-control input-sm static-view input-small">
                                @if (Model.PhoneList != null && Model.PhoneList.Count > 1)
                                {
                                    @Html.DisplayFor(model => model.PhoneList[1].PhoneTypeName)
                                }
                            </p>
                        </div>
                        <div class="form-group">
                            <p class="form-control input-sm static-view input-large">
                                @if (Model.PhoneList != null && Model.PhoneList.Count > 1)
                                {
                                    @Html.DisplayFor(model => model.PhoneList[1].PhoneNo)
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group form-group-control">
                <div class="col-md-2">
                    <p class="form-control-static">
                        เบอร์โทรศัพท์ #3:
                    </p>
                </div>
                <div class="col-md-10 nopadding">
                    <div class="form-inline">
                        <div class="form-group">
                            <p class="form-control input-sm static-view input-small">
                                @if (Model.PhoneList != null && Model.PhoneList.Count > 2)
                                {
                                    @Html.DisplayFor(model => model.PhoneList[2].PhoneTypeName)
                                }
                            </p>
                        </div>
                        <div class="form-group">
                            <p class="form-control input-sm static-view input-large">
                                @if (Model.PhoneList != null && Model.PhoneList.Count > 2)
                                {
                                    @Html.DisplayFor(model => model.PhoneList[2].PhoneNo)
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        เบอร์แฟกซ์:
                    </p>
                </div>
                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.Fax)
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group form-group-control">
                <div class="col-md-2">
                    <p class="form-control-static">
                        อีเมล์:
                    </p>
                </div>
                <div class="col-md-10">
                    <p class="form-control input-sm static-view">
                        @Html.DisplayFor(model => model.Email)
                    </p>
                </div>
            </div>
        </div>
    </div>

@if (Model.CustomerAddress != null && Model.CustomerAddress.CustomerAddress != null)
{
    if (Model.CustomerAddress.ResponseCode == "CBS-I-1000" || Model.CustomerAddress.ResponseCode == "CBS-M-2001")
    {
        if (Model.CustomerAddress.CustomerAddress.Count() > 0)
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                ที่อยู่:
                            </p>
                        </div>
                        <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                            <p class="form-control input-text-wrap input-sm static-view" >
                                @Model.CustomerAddress.CustomerAddress[0].AddressTypeName
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group form-group-control">
                        <div class="col-md-12">
                            <p class="form-control input-text-wrap input-sm static-view">
                                (Seq @Model.CustomerAddress.CustomerAddress[0].Seq) : @Model.CustomerAddress.CustomerAddress[0].AddressDisplay
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                            <p class="form-control-static">
                                ที่อยู่:
                            </p>
                        </div>
                        <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                            <p class="form-control input-text-wrap input-sm static-view" style="padding-left:0;padding-right:0">
                                
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="form-group form-group-control">
                        <div class="col-md-12">
                            <p class="form-control input-sm static-view">
                                
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }

        if (Model.CustomerAddress.CustomerAddress.Count() > 1)
        {
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group form-group-control">
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-8">
                            <strong class="font-blue">
                                <a class="font-blue" style="cursor:pointer;" id="divShowOtherAddress">[+] ที่อยู่อื่นๆ</a>
                            </strong>
                        </div>
                    </div>
                </div>
            </div>

            <div id="divOtherAddress" style='display:none'>
                @for (int i = 1; i < Model.CustomerAddress.CustomerAddress.Count(); i++)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group form-group-control">
                                <div class="col-md-4">
                                </div>
                                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                                    <p class="form-control input-text-wrap input-sm static-view" >
                                        @Model.CustomerAddress.CustomerAddress[i].AddressTypeName
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group form-group-control">
                                <div class="col-md-12">
                                    <p class="form-control input-text-wrap input-sm static-view">
                                        (Seq @Model.CustomerAddress.CustomerAddress[i].Seq) : @Model.CustomerAddress.CustomerAddress[i].AddressDisplay
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }

    else
    {
        <div class="row">
            <div class="col-md-4">
                <div class="form-group form-group-control">
                    <div class="col-md-4">
                        <p class="form-control-static">
                            ที่อยู่:
                        </p>
                    </div>
                    <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                        <p class="form-control input-text-wrap input-sm static-view" style="padding-left:0;padding-right:0">

                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group form-group-control">
                    <div class="col-md-12">
                        <p class="form-control input-sm static-view">

                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group form-group-control">
                <div class="col-md-4">
                    <p class="form-control-static">
                        ที่อยู่:
                    </p>
                </div>
                <div class="col-md-8" style="padding-right: 0px;padding-left:5px">
                    <p class="form-control input-text-wrap input-sm static-view" style="padding-right:0">

                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="form-group form-group-control">
                <div class="col-md-12">
                    <p class="form-control input-sm static-view">

                    </p>
                </div>
            </div>
        </div>
    </div>
}


</div>