@using CSM.Entity
@using CSM.Common.Resources
@model CSM.Web.Models.ProductServiceViewModel
@{
    ViewBag.Title = Resource.Lbl_CustomerInformation;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section MainMenu
{
    @Html.Action("MainMenu", "MenuNavigator", new { selectedMenu = MenuCode.Customer })
}

@section Breadcrumb {
    <strong class="font-blue">@Resource.Lbl_Customer &rsaquo;&rsaquo;</strong>
    <strong class="font-blue">
        @Html.ActionLink(Resource.Lbl_SearchCustomer, "Search", "Customer", new { @skip = "1" }, new { @class = "font-blue" })
    </strong>
    <strong class="font-green-jungle">&rsaquo;&rsaquo; @Resource.Lbl_CustomerInformation </strong>
}

@if (Model != null)
{
    <div id="dvForm" class="form-box">
        <h5 class="form-title">@Resource.Lbl_CustomerInformation</h5>
        @Html.HiddenFor(model => model.CustomerInfo.CustomerId, new { @id = "hddCustomerId" })
        @Html.HiddenFor(model => model.CustomerInfo.CustomerNumber, new { @id = "hddCustomerNumber" })
        @if (Model.CustomerInfo != null)
        {
            Html.RenderPartial("~/Views/Customer/_CustomerInfo.cshtml", Model.CustomerInfo);

        }
        <div class="clearfix"></div>
        @Html.Action("CustomerTab", "MenuNavigator", new { selectedTab = CustomerTabCode.ProductService, customerId = @Model.CustomerInfo.CustomerId, customerNumber = @Model.CustomerInfo.CustomerNumber })

        <div class="clearfix"></div>
        <div class="tab-content">
            <div id="tabExistingProduct" class="tab-pane fade in active">
                <div id="dvSearchResult">
                </div>
            </div>
        </div>
    </div>
}
<div class="clearfix"></div>
@*View Detail Product*@
<div id="viewDetailProductModal"></div>



<div id="dvTarget"></div>
@section masterjs
{
    <script type="text/javascript">
        var searchFilter;
        var successFilter;

        $jq(document).ready(function () {
            initializeSearchFilter();
            initializePaging();
            loadData();

            $jq("#divShowOtherAddress").click(function () {
                setTimeout(function () {
                    $jq("#divOtherAddress").toggle();

                    if ($jq("#divOtherAddress").css("display") == "none")
                        $jq("#divShowOtherAddress").html("[+] ที่อยู่อื่นๆ");
                    else
                        $jq("#divShowOtherAddress").html("[-] ที่อยู่อื่นๆ");

                }, 300);
            });
        });

        function initializeSearchFilter() {
            searchFilter = {
                CustomerId: $jq("#hddCustomerId").val(),
                CustomerNumber: $jq("#hddCustomerNumber").val(),
                PageNo: '@Model.SearchFilter.PageNo',
                PageSize: '@Model.SearchFilter.PageSize',
                SortField: '@Model.SearchFilter.SortField',
                SortOrder: '@Model.SearchFilter.SortOrder'
            };
            successFilter = searchFilter;
        }

        function initializePaging() {

            $jq("#dvSearchResult .input-page").change(function (event) {
                searchFilter = successFilter;
                searchFilter.PageNo = $jq(this).val();
                loadData();
                return false;
            }).keypress(function (event) {
                return validateDigit(event);
            });

            $jq("#dvSearchResult #pagesizelist").change(function (event) {
                searchFilter = successFilter;
                searchFilter.PageNo = "1";
                searchFilter.PageSize = $jq(this).val();
                loadData();
                return false;
            });

            $jq('#dvSearchResult .pagination ul li a').on('click', function (event) {
                searchFilter = successFilter;
                searchFilter.PageNo = getUrlParameter($jq(this).attr("href"), "page");
                loadData();
                return false;
            });
        }

        function loadData() {
            $jq.ajax({
                url: '@Url.Action("ProductServiceList", "ProductService")',
                type: "POST",
                data: addAntiForgeryToken(searchFilter),
                beforeSend: function () { $jq("#dvLoading").show(); },
                complete: function () { $jq("#dvLoading").hide(); },
                success: function (result) {
                    if (result.Valid == null) {
                        $jq("#dvSearchResult").html('');
                        successFilter = searchFilter;
                        $jq("#dvSearchResult").html(result);
                        initializePaging();
                    } else {
                        showServerErrors(result);
                    }
                },
                error: function (xhr) {
                    var handleMsg = '@CSM.Common.Resources.Resource.Error_System';
                    ajaxErrorHandling(xhr, handleMsg, '@FormsAuthentication.LoginUrl', '@Url.Action("AccessDenied", "User")');
                }
            });

            return false;
        }

        function sortField(selectedSortField) {
            if (selectedSortField == searchFilter.SortField)
                searchFilter.SortOrder = (searchFilter.SortOrder == 'ASC') ? 'DESC' : 'ASC';
            else
                searchFilter.SortOrder = 'ASC';
            searchFilter.SortField = selectedSortField;
            searchFilter.PageNo = 1;
            loadData();
        }

        function initNewSR(customerId, accountId, accountNo) {
            var actionUrl = '@Url.Action("Create", "ServiceRequest")';
            $jq('#dvTarget').html('');
            var inputCustomerId = $jq("<input>").attr("type", "hidden").attr("name", "CustomerId").val(customerId);
            var inputAccountId = $jq("<input>").attr("type", "hidden").attr("name", "AccountId").val(accountId);
            var inputAccountNo = $jq("<input>").attr("type", "hidden").attr("name", "AccountNo").val(accountNo);
            var inputToken = $jq("<input>").attr("type", "hidden").attr("name", "__RequestVerificationToken").val(getAntiForgeryToken());
            $jq('#dvTarget').append('<form action="' + actionUrl + '" method="POST" class="hidden" target="_blank"></form>');
            $jq('#dvTarget form').append($jq(inputToken));
            $jq('#dvTarget form').append($jq(inputCustomerId));
            $jq('#dvTarget form').append($jq(inputAccountId));
            $jq('#dvTarget form').append($jq(inputAccountNo));
            $jq('#dvTarget form').submit();
        }

        function initViewDetailProduct(productGroup, accountNumber, customerNumber, customerId) {

            var actionUrl = '@Url.Action("ViewProductDetail", "ProductService")';
            $jq('#viewDetailProductModal').html('');
            var inputProductGroup = $jq("<input>").attr("type", "hidden").attr("name", "ProductGroup").val(productGroup);
            var inputAccountNumber = $jq("<input>").attr("type", "hidden").attr("name", "AccountNumber").val(accountNumber);
            var inputCustomerNumber = $jq("<input>").attr("type", "hidden").attr("name", "CustomerNumber").val(customerNumber);
            var inputCustomerId = $jq("<input>").attr("type", "hidden").attr("name", "CustomerId").val(customerId);
            var inputPageNo = $jq("<input>").attr("type", "hidden").attr("name", "PageNo").val('@Model.SearchFilter.PageNo');
            var inputPageSize = $jq("<input>").attr("type", "hidden").attr("name", "PageSize").val('@Model.SearchFilter.PageSize');
            var inputToken = $jq("<input>").attr("type", "hidden").attr("name", "__RequestVerificationToken").val(getAntiForgeryToken());


            $jq('#viewDetailProductModal').append('<form action="' + actionUrl + '" method="POST" class="hidden" target="_blank"></form>');
            $jq('#viewDetailProductModal form').append($jq(inputToken));
            $jq('#viewDetailProductModal form').append($jq(inputProductGroup));
            $jq('#viewDetailProductModal form').append($jq(inputAccountNumber));
            $jq('#viewDetailProductModal form').append($jq(inputCustomerNumber));
            $jq('#viewDetailProductModal form').append($jq(inputCustomerId));
            $jq('#viewDetailProductModal form').append($jq(inputPageNo));
            $jq('#viewDetailProductModal form').append($jq(inputPageSize));
            $jq('#viewDetailProductModal form').submit();
        }
    </script>
}
