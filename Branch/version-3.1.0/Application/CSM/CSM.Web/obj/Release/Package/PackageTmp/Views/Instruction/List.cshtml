            $jq("#divShowOtherAddress").click(function () {
                setTimeout(function () {
                    $jq("#divOtherAddress").toggle();

                    if ($jq("#divOtherAddress").css("display") == "none")
                        $jq("#divShowOtherAddress").html("[+] ที่อยู่อื่นๆ");
                    else
                        $jq("#divShowOtherAddress").html("[-] ที่อยู่อื่นๆ");

                }, 300);
            });
